<div class="container2">
  <div class="container-players">
<h1 class="playername-page" > <b> {{player.name}} </b></h1>
<p class="player-info"> <b> Height:</b> {{player.height}} meters</p>
<p class="player-info"> <b>Weight:</b> {{player.weight}} kilograms</p>
<p class="player-info"><b>Jersey Number:</b> {{player.number}}</p>
<p class="player-info"><b>Position:</b> {{player.position}}</p>
<p class="player-info"><b>Most Popular Team:</b> {{player.team}}</p>

</div>
<br>
<br>
<br>



<iframe class="player-video" width="350" height="220" src="{{player.playerVideo}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<br>
<form action="/review/player/{{player._id}}" method="post">
<label class="reviews-area-btn" for="reviews"></label>
    <textarea class="reviews-textarea" name="content" id="reviews" cols="30" rows="10"></textarea>
    <button class="review-btn r-b" type="submit">Leave a review</button>
</form>
<br>
{{#each player.reviews}}
<div class = "reviews">

    <p class="review">{{content}} <span>  <br> <b>By:</b> {{author.username}}</span></p>

    {{#ifEquals author._id ../userId}}

    <form action="/delete-review/{{_id}}" method="post">
<div> 
        <button class="delete-review-btn" type="submit">Delete Review</button>
    </form>

    {{/ifEquals}}
</div>
{{/each}}