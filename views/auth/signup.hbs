  <div class="signup">
<div id="signup-form">
  
  <h2 class="h2"><span class="span ">Sign</span>up</h2>
  <form action="/auth/signup" method="POST">

<div class="credentials">
    <label class="input username"> Username
      <input class="inputs2" type="text" name="username" placeholder="Your username" />
    </label>

    <label class="input email"> Email
      <input class="inputs2" type="email" name="email" placeholder="Your email" />
    </label>

    <label class="input password"> Password
      <input class="inputs2" type="password" name="password" placeholder="Your password" />
    </label>
    </div>

   <button class="signup-btn" type="submit">Sign Up</button>

    <p>Already have an account?</p>
    <a class="signup-login-btns" href="/auth/login">Login</a>
</div>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>